extends _templates/base.pug

mixin quality(glyph, name, description)
	.quality.col-md-4.text-center
		span.glyphicon(class=glyph)
		.caption
			h4.text-center= name
			p.text-left= description
			


block head
	title UHSSE
	link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.3.1/fullcalendar.min.css")
	link(rel="stylesheet" href="/assets/css/index.css")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js" defer)
	script(src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.3.1/fullcalendar.min.js" defer)
	script(src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.3.1/gcal.min.js" defer)
	script(src="assets/js/index.js" defer)

block body
	+header(banners, name, phrase)
	.banner-strip
		p.text-white.text-center
			| 351 Mark Twain Drive, Hartford CT 06112 
			a.btn.btn-default(href="https://goo.gl/maps/1trdfAtqE4A2" target="_blank") #[span.glyphicon.glyphicon-road] Get Directions
	.container
		#calendar

		hr

		.row
			each quality in qualities
				+quality(quality.glyph, quality.name, quality.description)
