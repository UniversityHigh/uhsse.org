mixin header(images, name, lead, announcements)
	.jumbotron.header(style="background-image: url(" + images + ");")
		.container.header-text
			span.text-stroke.text-right
				h1.text-white= name
				p.text-white= lead

mixin section(title, lead, nav)
	.section(id=nav)
		h2= title
			if lead
				p.lead= lead
		
		block

mixin innerSection(name)
	.inner-section
		h4= name
		block

doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width,initial-scale=1")
		link(rel="stylesheet", href="https://bootswatch.com/paper/bootstrap.min.css")
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css")
		link(rel="stylesheet", href="assets/css/theme.css")
		link(rel="icon", type="image/ico", href="/not_real.ico" sizes="32x32")
		link(rel="apple-touch-icon", href="/not_real.png", sizes="128x128")
		script(src="assets/js/app.js" defer)
		block head
	body
		include navbar.pug
		block body
		a#jump(title="Jump to top of page." style="display: none;")
