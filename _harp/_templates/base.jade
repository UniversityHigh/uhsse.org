mixin header(image, name, lead, buttons)
	.jumbotron.header(style="background-image: url(" + image + ");")
		.container
			span.text-stroke.text-right
				h1.text-white= name
				p.text-white= lead
			if buttons
				each button in buttons.reverse()
					a.btn-nav.btn.btn-default.hidden-xs(href=button.nav)= button.name

mixin section(title, lead, nav)
	.section(id=nav)
		h2= title
			p.lead= lead
		block

doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width,initial-scale=1")
		link(rel="stylesheet", href="https://bootswatch.com/paper/bootstrap.min.css")
		link(rel="stylesheet", href="assets/css/theme.css")
		link(rel="icon", type="image/ico", href="/not_real.ico" sizes="32x32")
		link(rel="apple-touch-icon", href="/not_real.png", sizes="128x128")
		script(src="assets/js/app.js" defer)
		block head
