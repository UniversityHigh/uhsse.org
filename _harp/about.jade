extends _templates/base.jade

mixin contacts()
	each contact in contacts
		tr
			each data in contact
				td= data

block head
	title About Us | UHSSE
	link(rel = "stylesheet", href = "/resources/css/about.css")

block body
	//- TODO: switch to constructing these sections through JSON.
	.container-fluid
		h1.text-center Contacts
		hr
		.container
			table.table.table-striped.table-hover
				thead
					th Name
					th Position
					th Email
				tbody
					+contacts()

