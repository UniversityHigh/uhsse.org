extends _templates/base.jade

mixin calendar(month, year)
  table.table-responsive.calendar
    thead.banner
      tr
        th(colspan = "4")
          h4.text-white
            strong#month
            span#year
        th.change-month(colspan = "3")
          span.glyphicon.glyphicon-menu-left#lastMonth
          span.glyphicon.glyphicon-menu-right#nextMonth
      tr
        each day in ["Mon", "Tue", "Wed", "Thur", "Fri", "Sat", "Sun"]
          th.day-title
            h5.text-white= day  
    tbody.days
      //- for (let week = 0; week < 5; week++) {
      - function range(start, end) { var arr = []; for (var i = start; i < end; i++) arr.push(i); return arr; }
      each week in range(0, 5)
        tr
         each day in range(0, 7)
            td
              strong.day-number
              ul.events
                li.event test
block head
  title News | UHSSE
  link(rel = "stylesheet", href = "/assets/css/news.css")
  script(src = "assets/js/news.js" defer)

block body
  +header(banner, name, lead)
  .container
    +section(calendar.name, calendar.lead)
      +calendar(calendar.month, calendar.year)