extends _templates/base.jade

mixin sport(name, coaches, schedules)
	.col-md-3
		.panel.panel-default
			.panel-heading
				h5 #{name}
			.panel-body
				h6#coachingStaff
					strong Coaching Staff
				ul.list-unstyled
					each coach in coaches
						li.coachingStaff #{coach.name} #[p.league #{coach.league}]
				
				h6#gameSchedule
					strong Game Schedule
				ul.list-unstyled
					each schedule in schedules
						li.gameSchedule #[a(href=schedule.link target="_blank") #{schedule.name}]

block head
	title Extracurriculars | UHSSE
	link(rel = "stylesheet", href = "/assets/css/extracurriculars.css")

block body
	+header("/assets/img/extracurriculars.jpg", title, phrase, buttons)

	.container
		+section("Sports", "Get your game on", "sports")
			.row
				each sport in sports
					+sport(sport.name, sport.coaches, sport.schedules)